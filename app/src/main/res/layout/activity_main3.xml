<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.MainActivity3">
    <ImageButton
        android:id="@+id/isBack"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/border_radius"
        android:src="@drawable/arrow_back"
        android:textColor="#eee"
        android:textSize="15dp"
        android:scaleType="centerInside"
        android:paddingStart="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Tarefa"
        android:textSize="25sp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para atualizar os dados clique em atualizar ou delete a tarefa clicando em apagar"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:textColor="#999"
        android:layout_marginTop="5dp"
    />
    <EditText
        android:id="@+id/inputValorUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_style"
        android:padding="10dp"
        android:hint="Nome da task"
    />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/input_style"
        android:padding="10dp"
    />
    <EditText
        android:id="@+id/inputDateUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_style"
        android:padding="10dp"
        android:hint="00/00/0000"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:cornerRadius="5dp"
        android:text="Atualizar"
        android:backgroundTint="#333333"
        android:textSize="18sp"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        app:cornerRadius="5dp"
        android:text="Apagar"
        android:backgroundTint="#F64B38"
        android:textSize="18sp"
    />

</LinearLayout>